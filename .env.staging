# 앱 환경 설정
REACT_APP_ENV=staging
REACT_APP_NAME=MyTripStyle(스테이징)
REACT_APP_VERSION=$npm_package_version

# API 엔드포인트
REACT_APP_API_URL=https://api-staging.mytripstyle.com
REACT_APP_BASE_URL=https://staging.mytripstyle.com

# Firebase 구성
REACT_APP_FIREBASE_PROJECT_ID=my-trip-style-staging
REACT_APP_FIREBASE_AUTH_DOMAIN=my-trip-style-staging.firebaseapp.com
REACT_APP_FIREBASE_STORAGE_BUCKET=my-trip-style-staging.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=627112795738
REACT_APP_FIREBASE_APP_ID=1:627112795738:web:167800fd22e7ee69168264

# 기능 플래그
REACT_APP_FEATURE_OFFLINE_MODE=true
REACT_APP_FEATURE_WEATHER_API=true
REACT_APP_FEATURE_AI_RECOMMENDATIONS=true
REACT_APP_FEATURE_GROUP_RECOMMENDATIONS=true

# 개발 도구 설정
REACT_APP_USE_EMULATOR=false
REACT_APP_VERBOSE_LOGGING=false

# 기타 설정
REACT_APP_DEFAULT_LANGUAGE=ko
REACT_APP_LOCATION_REFRESH_INTERVAL=120000
REACT_APP_CACHE_DURATION=7200000

# 성능 모니터링 샘플링 비율
REACT_APP_PERFORMANCE_MONITORING_SAMPLE_RATE=0.2
REACT_APP_ERROR_REPORTING_SAMPLE_RATE=0.5

# PWA 설정
REACT_APP_PWA_NAME=MyTripStyle Staging
REACT_APP_PWA_SHORT_NAME=MyTripStyle
REACT_APP_PWA_THEME_COLOR=#2196f3
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# 외부 API 설정 (주의: 실제 API 키는 포함하지 말고 CI/CD에서 설정)
REACT_APP_WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5/weather
REACT_APP_OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
REACT_APP_OPENAI_API_MODEL=gpt-3.5-turbo

# 에러 모니터링 설정
REACT_APP_ENABLE_ERROR_MONITORING=true

# 캐싱 및 오프라인 전략
REACT_APP_CACHE_STRATEGY=network-first
REACT_APP_SYNC_INTERVAL=300000
